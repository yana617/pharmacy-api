{
  "name": "pharmacy-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=prod node index.js",
    "test": "set NODE_ENV=test&jest --runInBand --testRunner='jest-circus/runner' --verbose",
    "lint": "node_modules/.bin/eslint .",
    "postinstall": "husky install",
    "server": "NODE_ENV=dev nodemon index.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yana617/pharmacy-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yana617/pharmacy-api/issues"
  },
  "homepage": "https://github.com/yana617/pharmacy-api#readme",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/fixtures/setup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/client/"
    ]
  },
  "dependencies": {
    "bcrypt": "5.0.0",
    "chalk": "4.1.0",
    "connect-mongo": "3.2.0",
    "cookie-parser": "1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "express": "4.17.1",
    "express-query-boolean": "2.0.0",
    "express-session": "1.17.1",
    "js-yaml": "3.14.1",
    "mongoose": "5.12.5",
    "morgan": "1.10.0",
    "passport": "0.4.1",
    "passport-local": "1.0.0",
    "swagger-ui-express": "4.1.6"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.1.0",
    "jest": "26.6.0",
    "jest-circus": "^26.6.3",
    "nodemon": "2.0.5",
    "supertest": "^6.1.3"
  }
}
