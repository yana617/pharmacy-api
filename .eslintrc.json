{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "globals": {
    "describe": true,
    "it": true,
    "expect": true,
    "beforeAll": true,
    "afterAll": true,
    "test": true,
    "beforeEach": true
  },
  "rules": {
    "linebreak-style": 0,
    "semi": [
      "error",
      "always"
    ],
    "no-plusplus": "off",
    "func-names": "off",
    "no-console": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "no-multi-str": "off",
    "prefer-template": "off",
    "no-prototype-builtins": "off",
    "no-restricted-globals": "off",
    "consistent-return": "off",
    "no-loop-func": "off",
    "eqeqeq": [
      "error",
      "always",
      {
        "null": "ignore"
      }
    ],
    "prefer-promise-reject-errors": "warn",
    "no-use-before-define": "warn",
    "prefer-destructuring": "warn",
    "camelcase": "off"
  }
}